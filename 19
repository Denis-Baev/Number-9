using System;

namespace CSharp_lessons
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите число");
            int a = Convert.ToInt32(Console.ReadLine());
            int i = 0;
            while (a > 1)
            {
                a = a / 2;
                i++;
            }
            Console.WriteLine("Степень: " + i.ToString());
        }
    }
}
